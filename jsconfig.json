{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/images/*": [
        "src/images/*"
      ],
      "@/templates/*": [
        "src/templates/*"
      ],
      "@/assets/*": [
        "content/assets/*"
      ],
      "@/projects/*": [
        "content/projects/*"
      ]
    }
  }
}